<% include partials/header %>

<div class="ui main text container">
    <div class="ui huge header">Blogs Page</div>
    <div class="top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>" alt="">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>">
                            <%= blog.title %>
                        </a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- blog.body.substring(0,200) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui basic button" href="/blogs/<%= blog._id%>">Read More</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

</div>



<% include partials/footer %>