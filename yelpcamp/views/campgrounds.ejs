<% include partials/header.ejs %>

<!-- Jumbotron -->
<header>
    <div class="container">
        <div class="jumbotron mt-4">
            <h1>Welcome to YelpCamp!</h1>
            <p>See our hand-picked campgrounds from all over the world</p>
            <a class="btn btn-primary btn-large" href="http://localhost:3000/campgrounds/new">Add new campground</a>
        </div>
    </div>
</header>

<!-- Grid of cards showing campgrounds -->
<div class="container-fluid">
    <div class="row">

        <div class="col col-12">
                <h3>Popular campgrounds</h3>
        </div>

        <% campgrounds.forEach(function(campground){ %>
            <div class="col col-md-4 col-sm-6 col-12">
                <div class="card mt-4">
                    <img src="<%= campground.image %>" alt="" class="card-img-top img-fluid">
                    <div class="card-body text-center">
                        <h4><%= campground.name %></h4>
                    </div>
                </div>
            </div>
        <% }) %>

    </div>
</div>



